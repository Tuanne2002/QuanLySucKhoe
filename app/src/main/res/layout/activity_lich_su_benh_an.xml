<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LichSuBenhAnActivity">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="411dp"
        android:layout_height="121dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#73DD41"
        />
    <TextView
        android:id="@+id/tvLichSu"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Lịch Sử Khám Bệnh"
        />
    <Button
        android:id="@+id/arrow_back_"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/img_10"
        />
    <TextView
        android:id="@+id/t_t_c_c_c_p"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Tất Cả Các Phiên Khám"
        />
    <View
        android:id="@+id/stethoscope"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:background="@drawable/img_35"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="20dp"
        />


    <ListView
        android:id="@+id/lvBenhAn"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"/>
    <Button
        android:id="@+id/imgThemBenh"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:layout_marginLeft="344dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/img_12" />

</RelativeLayout>