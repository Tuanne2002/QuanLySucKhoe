<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThuocActivity">
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="411dp"
        android:layout_height="121dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#CCC3C3"
        />
    <TextView
        android:id="@+id/thu_c"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:text="THÊM ĐƠN THUỐC"
        android:gravity="top"
        />
    <View
        android:id="@+id/image_8"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="363dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:background="@drawable/img_5"
        />
    <View
        android:id="@+id/arrow_back_"
        android:layout_width="26.3dp"
        android:layout_height="25.82dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/img_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/tvMaBN"
            android:layout_width="104dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Mã bệnh nhân:"
            />

        <EditText
            android:id="@+id/edtMaBenhNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="170dp">

        <TextView
            android:id="@+id/tvTenBN"
            android:layout_width="104dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Tên bệnh nhân:"
            />

        <EditText
            android:id="@+id/edtTenBenhNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="270dp">

        <TextView
            android:id="@+id/tvtenthuoc"
            android:layout_width="104dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Tên Thuốc:"
             />

        <EditText
            android:id="@+id/edtTenTThuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCachDung"
            android:layout_width="104dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Cách Dùng:" />

        <EditText
            android:id="@+id/edtCachDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNBD"
            android:layout_width="104dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Ngày Bắt Đầu :" />

        <EditText
            android:id="@+id/edtNBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNKT"
            android:layout_width="104dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Ngày Kết Thúc :" />

        <EditText
            android:id="@+id/edtNKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvsoluong"
            android:layout_width="104dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Số Lượng :" />

        <EditText
            android:id="@+id/edtsoluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="490dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemThuoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm Thuốc" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy" />
    </LinearLayout>

</RelativeLayout>